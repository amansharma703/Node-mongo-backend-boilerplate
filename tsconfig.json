{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": "",
    "module": "commonjs",
    "outDir": "./build",
    "strict": false,
    "target": "ES2019",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}